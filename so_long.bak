#include "so_long.h"
#define HEIGHT 1080
#define WIDTH 1920

void	sl_exit()
{
	exit(1);
}	

void	full_square(t_data *data, int x, int y, int color)
{
	int	t_x;
	int t_y;

	t_x = 0;
	t_y = y;
	while (t_x <= ((WIDTH / 7)))
	{
		while (t_y<= HEIGHT)
		{
			sl_mlx_pixel_put(data, x, t_y++, color); 
		}
		t_x++;
		x++;
		t_y = y;
		color = add_shade(color, 0.0001);
	}
}
int	main()
{
	t_mlx		*slx;
	t_mlx_image	*img;

	slx = mlx_init(WIDTH, HEIGHT, "Test", true);
	if (slx == NULL)
		sl_exit();
	img = mlx_new_image(slx, 256, 256);
	full_square(&img, x, y, 0xFFFFFFFF);
	x = WIDTH / 7 + x;
	full_square(&img, x, y, 0xFFFFFF00);
	x = WIDTH / 7 + x;
	full_square(&img, x, y, 0xFF00FFFF);
	x = WIDTH / 7 + x;
	full_square(&img, x, y, 0xFFFF00FF);
	x = WIDTH / 7 + x;
	full_square(&img, x, y, 0x00FF0000);
	x = WIDTH / 7 + x;
	full_square(&img, x, y, 0x0000FF00);
	x = WIDTH / 7 + x;
	full_square(&img, x, y, 0x000000FF);
		
	if (img == NULL)
		exit(1);
	mlx_loop(slx);
	sl_exit();
	return (0);
}
